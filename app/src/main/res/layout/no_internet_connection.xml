<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_ten"
            android:paddingLeft="@dimen/dimen_ten"
            android:paddingRight="@dimen/dimen_ten"
            android:text="@string/no_internet_connection"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textView1"
            android:layout_marginBottom="@dimen/dimen_ten"
            android:layout_marginRight="@dimen/dimen_ten"
            android:background="@drawable/selector_orange_button"
            android:gravity="center"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="OK"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/orange" />

    </RelativeLayout>
</RelativeLayout>